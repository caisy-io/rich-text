{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/lib/RichTextRenderer.vue.js"
  ],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
